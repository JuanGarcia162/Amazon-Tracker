# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Workaround for gRPC compilation issues with Xcode 15+
ENV['GRPC_NO_BINDER'] = '1'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Set minimum iOS version
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # Disable bitcode
      config.build_settings['ENABLE_BITCODE'] = 'NO'

      # Fix for Xcode 15+ and gRPC
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'GGRPC_CFSTREAM=1'

      # Fix for gRPC / BoringSSL-GRPC compilation
      if ['gRPC-C++', 'gRPC-Core', 'BoringSSL-GRPC'].include?(target.name)
        config.build_settings['CLANG_WARN_STRICT_PROTOTYPES'] = 'NO'
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
        config.build_settings['WARNING_CFLAGS'] = ['$(inherited)', '-Wno-error', '-Wno-everything']
        
        # Override COMPILER_FLAGS to remove -GCC_WARN_INHIBIT_ALL_WARNINGS
        config.build_settings.delete('COMPILER_FLAGS')
        config.build_settings['OTHER_CFLAGS'] = ['$(inherited)', '-DOPENSSL_NO_ASM', '-w', '-DBORINGSSL_PREFIX=GRPC', '-fno-objc-arc', '-Wno-error', '-Wno-everything']
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = ['$(inherited)', '-DOPENSSL_NO_ASM', '-w', '-DBORINGSSL_PREFIX=GRPC', '-fno-objc-arc', '-Wno-error', '-Wno-everything']
      end

      # Exclude arm64 for simulator builds
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
    end
  end

  # Global fix for non-modular includes
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
  end
  
  # Fix for Firebase non-modular header includes
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
  end

  # üîß CRITICAL: Remove all '-G' flags from ALL pods (Xcode 15/16 compatibility)
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Clean OTHER_CFLAGS
      if config.build_settings['OTHER_CFLAGS']
        flags = config.build_settings['OTHER_CFLAGS']
        if flags.is_a?(String)
          flags = flags.split(' ')
        end
        config.build_settings['OTHER_CFLAGS'] = flags.reject { |flag| flag.to_s.start_with?('-G') && flag.to_s != '-g' }
      end
      
      # Clean OTHER_CPLUSPLUSFLAGS
      if config.build_settings['OTHER_CPLUSPLUSFLAGS']
        flags = config.build_settings['OTHER_CPLUSPLUSFLAGS']
        if flags.is_a?(String)
          flags = flags.split(' ')
        end
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = flags.reject { |flag| flag.to_s.start_with?('-G') && flag.to_s != '-g' }
      end
      
      # Clean OTHER_CXXFLAGS
      if config.build_settings['OTHER_CXXFLAGS']
        flags = config.build_settings['OTHER_CXXFLAGS']
        if flags.is_a?(String)
          flags = flags.split(' ')
        end
        config.build_settings['OTHER_CXXFLAGS'] = flags.reject { |flag| flag.to_s.start_with?('-G') && flag.to_s != '-g' }
      end
    end
  end
  
  # üö® CRITICAL: Fix COMPILER_FLAGS in Pods project files
  # This MUST run after CocoaPods generates the project
  pods_project_path = File.join(__dir__, 'Pods', 'Pods.xcodeproj', 'project.pbxproj')
  if File.exist?(pods_project_path)
    puts "\nüîß Fixing BoringSSL-GRPC COMPILER_FLAGS..."
    text = File.read(pods_project_path)
    
    # Count occurrences before fix
    before_count = text.scan(/COMPILER_FLAGS = "-DOPENSSL_NO_ASM -GCC_WARN_INHIBIT_ALL_WARNINGS/).length
    
    # Replace problematic -GCC_WARN_INHIBIT_ALL_WARNINGS with proper flags
    # This flag is being interpreted as "-G CC_WARN_INHIBIT_ALL_WARNINGS" which causes the error
    text.gsub!(
      'COMPILER_FLAGS = "-DOPENSSL_NO_ASM -GCC_WARN_INHIBIT_ALL_WARNINGS -w -DBORINGSSL_PREFIX=GRPC -fno-objc-arc";',
      'COMPILER_FLAGS = "-DOPENSSL_NO_ASM -w -DBORINGSSL_PREFIX=GRPC -fno-objc-arc";'
    )
    
    # Count occurrences after fix
    after_count = text.scan(/COMPILER_FLAGS = "-DOPENSSL_NO_ASM -GCC_WARN_INHIBIT_ALL_WARNINGS/).length
    
    if before_count > after_count
      File.open(pods_project_path, "w") { |f| f.write(text) }
      puts "‚úÖ Fixed #{before_count} COMPILER_FLAGS entries in Pods.xcodeproj"
      puts "   Removed -GCC_WARN_INHIBIT_ALL_WARNINGS flag (fixes 'unsupported option -G' error)\n"
    else
      puts "‚ÑπÔ∏è  No COMPILER_FLAGS changes needed\n"
    end
  end
end

